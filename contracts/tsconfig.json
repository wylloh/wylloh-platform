{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["./scripts/**/*", "./test/**/*", "./hardhat.config.ts"],
  "exclude": [
    "node_modules", 
    "dist", 
    "cache", 
    "artifacts",
    "typechain-types/**/*"
  ]
} 